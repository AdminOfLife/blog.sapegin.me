<!DOCTYPE html>
<html lang="<%= @site.lang %>">
<head>
	<meta charset="utf-8">
	<title><%= @pageTitle() %></title>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="twitter:card" content="summary">
	<meta name="twitter:site" content="@<%= @_ 'twitterName' %>">
	<meta name="twitter:creator" content="@<%= @_ 'twitterName' %>">
	<% if @document.url is '/': %> 
		<meta name="description" content="<%= @pageDescription() %>">
	<% end %>
	<% if /\/all\//.test(@document.url): %>
		<meta property="og:type" content="article">
		<meta property="og:url" content="<%= @_ 'url' %><%= @document.url %>">
		<meta property="og:title" content="<%- @document.title %>">
	<% end %>

	<%- @getBlock('meta').toHTML() %>

	<%- @getBlock('styles').add(['/build/styles.css']).toHTML() %>
	<link href="http://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic&amp;subset=latin,cyrillic" rel="stylesheet">
	<link href="/atom.xml" rel="alternate" type="application/rss+xml" title="<%= @site.title %>">

	<script src="/build/modernizr.js"></script>
</head>
<body>
<header class="header">
	<% if @document.url is '/': %> 
		<h1 class="logo">
			<%= @site.title %>
		</h1>
	<% else: %>
		<div class="logo">
			<a href="/" class="logo__link blind-link"><%= @site.title %></a>
		</div>
	<% end %>

	<nav class="nav">
		<div class="nav__item">
			<a href="/all" class="nav__link"><%= @_ 'All posts' %></a>
		</div>
		<div class="nav__item">
			<a href="#search" class="nav__link"><%= @_ 'Search' %></a>
		</div>
		<div class="nav__item">
			<a href="<%= @translationUrl() %>" class="nav__link"><%= @_ 'translation' %></a>
		</div>
	</nav>

	<form id="search" class="search-form no-print" action="http://yandex.ru/sitesearch" method="get">
		<input type="hidden" name="searchid" value="2047351">
		<input type="hidden" name="web" value="0">
		<input type="hidden" name="l10n" value="<%= @site.lang %>">
		<input type="search" class="search-form__field" name="text" placeholder="<%= @_ 'Search' %>" value="">
	</form>

</header>

    <%- @rt @fixMd @content %>

	<footer class="footer">
		<div class="footer-i">
			<div class="footer__copyrights">
				© <a href="<%= @site.copyrightUrl %>" class="link"><%= @site.author %></a>, 2008—<%= (new Date).getFullYear() %>
			</div>
    		<div class="footer__info no-print">
    			<%- (@_ 'poweredBy').replace('{dp}', 'http://docpad.org/').replace('{do}', 'https://www.digitalocean.com/?refcode=bb49cbe65bb4') %>
    		</div>
    	</div>
    </footer>

