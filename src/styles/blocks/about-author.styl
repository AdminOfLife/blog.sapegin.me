.about-author {
	space(4);
	padding-top:spacer*1.5;
	padding-bottom:spacer*0.5;
	border:solid lighter_color;
	border-width:1px 0;
	font-size:.95rem;
	line-height:1.4;

	&__picture {
		margin-top:.25em;
		margin-right:spacer*1.5;
	}
	
	p {
		space();
	}

	+below(max_width) {
		margin-side:-(spacer);
		padding-side:spacer;
	}
	+below(320px) {
		&__picture {
			space();
			margin-top:0;
			margin-left:0;
			float:none;
			text-align:center;
		}
	}
}
