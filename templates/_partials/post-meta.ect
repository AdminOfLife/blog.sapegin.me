<footer class="note-meta">
	<span class="note-tags">
		<% for i, tag of @post.tags: %>
			<% tagName = @__('tagNames.' + tag) %>
			<% if tag is @tag: %>
				<span class="note-tags__tag note-tags__tag_marked marked"><%= tagName %></span>
			<% else: %>
				<a href="/tags/<%= tag %>" class="note-tags__tag link"><%= tagName %></a>
			<% end %>
		<% end %>
	</span>
	<time class="note-published" datetime="<%= @post.date.toISOString() %>"><%= @dateToString @post.date %></time>
</footer>
