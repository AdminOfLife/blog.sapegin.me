<% extend '_base' %>

<article class="note">
	<h1 class="note-title"><%- @rtt @title %></h1>

	<% if @unpublished: %>
		<p class="note-draft">This is a draft post, please don’t share it until it’s published.</p>
	<% end %>

	<div class="note-content text">
		<%- @rt @content %>
	</div>

	<% if @medium: %>
		<p class="note-feedback no-print"><%- @__ 'postComments', url: "https://medium.com/@sapegin/#{@medium}" %></p>
	<% end %>

	<p class="note-feedback no-print"><%- @__ 'postFeedback', url: "https://github.com/sapegin/blog.sapegin.me/edit/master/source/#{@sourcePath}" %></p>

	<% @post = this %>
	<%- include '_partials/post-meta' %>

	<% unless @unpublished: %>
		<div class="note-share">
			<div class="social-likes" data-title="<%= @title %>" data-single-title="<%= @__ 'share' %>">
				<div data-service="facebook" title="<%= @__ 'shareOnFacebook' %>"><%= @__ 'facebook' %></div>
				<div data-service="twitter" <%- @__ 'twitterExtra' %> title="<%= @__ 'shareOnTwitter' %>"><%= @__ 'twitter' %></div>
				<div data-service="plusone" title="<%= @__ 'shareOnGplus' %>"><%= @__ 'gplus' %></div>
				<% if @lang is 'ru': %>
					<div data-service="vkontakte" title="Поделиться постом во Вконтакте">Вконтакте</div>
				<% end %>
			</div>
		</div>
	<% end %>
</article>

<div class="about-author media no-print">
	<div class="about-author__picture media__img"><img src="/images/userpic.jpg" width="75" height="75" alt="<%= @option 'author' %>"></div>
	<div class="media__body">
		<%- @rt @__ 'longDescription' %>
	</div>
</div>

<script src="<%- @fingerprint '/build/main.js' %>" async></script>
