.about-author {
	space(4);
	padding-top:spacer*1.5;
	padding-bottom:spacer*0.5;
	border:solid lighter_color;
	border-width:1px 0;
	font-size:.95rem;
	line-height:1.4;

	&__picture {
		margin-top:.25em;
		margin-right:spacer*1.5;
	}

	p {
		space();
	}

	+below(550px) {
		margin-side:-(2*spacer);
		padding-side:2*spacer;
	}
	+below(375px) {
		&.media {
			display:block;
		}

		&__picture {
			space(1.5);
			margin-top:0;
			margin-left:0;
			text-align:center;
		}
	}
}
