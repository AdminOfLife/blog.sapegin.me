body {
	margin-side:auto;
	padding-top:2*spacer;
	background:bg_color;
	color:base_color;
	line-height:1.5;
	font-size:16px;
	max-width:max_width;
	box-sizing:content-box;
}
body,
.footer-i {
	padding-side:3*spacer;
}
+below(550px) {
	body {
		padding-side:2*spacer;
	}
}


// Fonts

body {
	font-family:text_font;
}


// Text

.text {
	h1,
	h2,
	h3 {
		margin-top:4*spacer;
		margin-bottom:2*spacer;
	}
	h2 {
		font-size:1em;
		font-weight:bold;
	}
	h3 {
		font-size:1em;
		font-weight:normal;
		font-style:italic;
	}

	code {
		font-family:text_font !important;
		font-style:italic;
	}

	pre code {
		border:solid lighter_color;
		border-width:1px 0;
		border-radius:0;
	}

	hr {
		space(2);
		border:solid lighter_color;
		border-width:0 0 1px;
	}

	+below(max_width) {
		pre code {
			margin-side:-(spacer);
		}
		img {
			margin:auto;
		}
	}
	+below(550px) {
		line-height:1.5;
	}
}


// Misc

.page-title {
	space(2);
	font-size:1.4rem;
	font-weight:normal;
}

.marked {
	margin:0 -.5ex;
	padding:.25ex .5ex;
	border-radius:.3em;
	background:hsla(52,96%,67%,.6) !important;
}

.blog-intro {
	space(3);
	font-size:1.2rem;
	font-style:italic
}

// Tweak Social Likes

.social-likes {
	margin-side:-.26em;
}
.social-likes__widget {
	margin-side:.26em;
}
