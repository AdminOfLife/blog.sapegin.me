<% extend '_base' %>

<%
@page.title = @___ 'all_num_posts', num: @page.posts_number, posts: @plural(@page.posts_number, 'posts_plural')
@page.noindex = true
%>

<% for year in @page.years: %>
	<h2 class="page-title"><%= year %></h2>
	<ul class="posts-list">
		<% for post in @page.posts_by_year[year]: %>
			<li class="posts-list__item">
				<a href="<%= @page_url post.path %>" class="posts-list__link link"><%- @rt post.title %></a>
			</li>
		<% end %>
	</ul>
<% end %>
